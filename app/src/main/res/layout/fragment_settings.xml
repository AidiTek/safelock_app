<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".presentation.fragments.Settings">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="Safe Lock"
        android:textColor="@color/toolBarTitleTextColor"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Настройки"
        android:textColor="@color/toolBarTitleTextColor"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Вход в программу"
        android:layout_marginTop="11dp"
        android:textColor="@color/toolBarTitleTextColor"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addpasswordelement_backgraund"
        android:showDividers="middle"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_numberKayboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Числовая клавиатура"
            android:padding="20dp"
            android:background="@drawable/rippleronded_backgrounds"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/toolBarTitleTextColor"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/grey"/>


        <TextView
            android:id="@+id/tv_settingsPasswords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/rippleronded_backgrounds"
            android:clickable="true"
            android:focusable="true"
            android:text="Изменение пароля"
            android:textColor="@color/toolBarTitleTextColor"
            android:textSize="18sp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Обратная связь"
        android:layout_marginTop="11dp"
        android:textColor="@color/toolBarTitleTextColor"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addpasswordelement_backgraund"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_chatDeveloper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Написать разработчику"
            android:background="@drawable/rippleronded_backgrounds"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:textColor="@color/toolBarTitleTextColor"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Данные"
        android:layout_marginTop="11dp"
        android:textColor="@color/toolBarTitleTextColor"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addpasswordelement_backgraund"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_deletData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удалить данные"
            android:background="@drawable/rippleronded_backgrounds"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:textColor="@color/deleteColor"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>